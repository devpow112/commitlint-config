{
  "name": "@devpow112/commitlint-config",
  "version": "1.0.4",
  "description": "Shareable commitlint configuration",
  "main": "src/config.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "run-s -s lint:git lint:js lint:md",
    "lint:js": "eslint .",
    "lint:md": "markdownlint .",
    "lint:git": "commitlint --from origin/main --to HEAD",
    "format": "run-s -s format:js format:md",
    "format:js": "npm run -s lint:js -- --fix",
    "format:md": "npm run -s lint:md -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devpow112/commitlint-config.git"
  },
  "keywords": [
    "commitlint-config"
  ],
  "author": "Devon Powell <devon.f.powell@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devpow112/commitlint-config/issues"
  },
  "homepage": "https://github.com/devpow112/commitlint-config#readme",
  "files": [
    "src/**/*.js"
  ],
  "engines": {
    "node": ">=12.22.7",
    "npm": ">=6.14.15"
  },
  "peerDependencies": {
    "@commitlint/cli": "^17",
    "@commitlint/config-conventional": "^17"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@devpow112/eslint-config": "^1.1.4",
    "@devpow112/semantic-release-config": "^1.2.2",
    "eslint": "^8.31.0",
    "markdownlint-cli": "^0.32.2",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^19.0.5"
  }
}
