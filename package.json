{
  "name": "@devpow112/commitlint-config",
  "version": "2.0.0",
  "description": "Shareable commitlint configuration",
  "keywords": [
    "commitlint-config"
  ],
  "homepage": "https://github.com/devpow112/commitlint-config#readme",
  "bugs": {
    "url": "https://github.com/devpow112/commitlint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devpow112/commitlint-config.git"
  },
  "license": "MIT",
  "author": "Devon Powell <devon.f.powell@gmail.com>",
  "main": "src/config.js",
  "files": [
    "src/**/*.js"
  ],
  "scripts": {
    "lint": "run-s -s lint:git lint:js lint:md lint:pkg",
    "lint:js": "eslint .",
    "lint:md": "markdownlint .",
    "lint:git": "commitlint --from origin/main --to HEAD",
    "lint:pkg": "sort-package-json --check",
    "format": "run-s -s format:js format:md format:pkg",
    "format:js": "npm run -s lint:js -- --fix",
    "format:md": "npm run -s lint:md -- --fix",
    "format:pkg": "sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.3",
    "@devpow112/eslint-config": "^2.0.1",
    "@devpow112/semantic-release-config": "^2.2.0",
    "eslint": "^8.55.0",
    "markdownlint-cli": "^0.37.0",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^21.1.2",
    "sort-package-json": "^2.6.0"
  },
  "peerDependencies": {
    "@commitlint/cli": "^17",
    "@commitlint/config-conventional": "^17"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
